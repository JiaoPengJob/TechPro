<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.hongjitech.vehicle.activity.CarDataActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="请输入该车辆的车牌号:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_car_data_cardID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="请输入车牌号"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_car_data_content"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_car_device_id"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp" />

        <TextView
            android:id="@+id/tv_car_id"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_car_data_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pwd_exit" />

        <ImageView
            android:id="@+id/iv_car_data_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:src="@drawable/car_save" />

        <ImageView
            android:id="@+id/iv_car_data_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:src="@drawable/test_file" />

        <ImageView
            android:id="@+id/iv_car_data_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:src="@drawable/pwd_sure" />

    </LinearLayout>

</LinearLayout>
