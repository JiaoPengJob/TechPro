<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="cn.hongjitech.vehicle.activity.AssessActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_60"
        android:background="@color/blue"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="@string/title_main"
        android:textColor="@color/greay"
        android:textSize="@dimen/font_30" />

    <Button
        android:id="@+id/bt_carInfoTest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="车辆信息配置"
        android:textSize="18sp"
        android:textColor="@color/greay"
        android:layout_marginTop="30dp"
        android:background="@color/blue"
        />

    <Button
        android:id="@+id/bt_serialportTest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="车身信号数据测试"
        android:textSize="18sp"
        android:textColor="@color/greay"
        android:layout_marginTop="5dp"
        android:background="@color/blue"
        />

    <Button
        android:id="@+id/bt_examInfoTest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/blue"
        android:text="考试结果数据测试"
        android:textColor="@color/greay"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        />

</LinearLayout>

