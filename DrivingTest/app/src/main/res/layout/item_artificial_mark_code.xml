<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/greay"
    android:id="@+id/rl_item_art_code_parent"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_art_code_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="10010"
            android:textColor="@color/content"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_item_art_code_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="不按规定减速行驶"
            android:textColor="@color/content"
            android:textSize="@dimen/font_16" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_item_art_code_correct"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="#00000000"
        android:src="@drawable/art_correct"
        android:visibility="gone" />

</RelativeLayout>
